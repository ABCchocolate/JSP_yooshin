package com.sinse.boardapp.controller;


import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

//클라이언트가 전송한 글쓰기 폼의 파라미터들을 받아,데이터베이스에서 받아 insert 시키는 서블
public class RegistServlet extends HttpServlet {
	@Override
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		//Let's get the value of the variable = parameter sent by the browser, which is the client, and put it in db
		//draw out the parameter, from request object
		request.setCharacterEncoding("utf-8"); //Encoding Point for Parameters
		Connection con = null;
		String driver = "com.mysql.cj.jdbc.Driver";
		String url = "jdbc:mysql://localhos:3306/spring4"; 
		String user = "spring4";
		String pass = "12341234";
		
		String title = request.getParameter("title");
		String writer = request.getParameter("writer");
		String content = request.getParameter("content");
		
		System.out.println(title);
		System.out.println(writer);
		System.out.println(content);
		
	}
}
