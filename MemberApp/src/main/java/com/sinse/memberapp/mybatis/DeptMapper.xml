<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Dept">
	<resultMap type = "Dept" id = "DeptEmpMap">
		<id column = "deptno" property="deptno"/>
		<id column = "dname" property="dname"/>
		<id column = "loc" property="loc"/>
		<collection column = "deptno" javaType="java.util.List"
			ofType="Emp" property ="emplist"
			select = "Emp.selectByDeptno"/>
		</resultMap> 
	
	
	<!-- 부서 목록을 출력하고 싶어요.  -->
	<select id="selectAll" resultMap="DeptEmpMap">
		select deptno, dname, loc
		from dept
		order by deptno asc
	</select>
	
	<select id="select" parameterType="int" resultType="Dept" >
		select * from dept where deptno = #{deptno}
	</select>

</mapper>